<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:columnCount="2">

  <!-- Shadow  -->
  <TextView
      android:layout_gravity="start|end|center_vertical"
      android:text="@string/shadow_preference"
      style="@style/Widget.DFG.PreferenceActivity.RowTitle"/>
  <Switch
      android:id="@+id/shadow_preference"
      android:layout_gravity="start|center_vertical"
      style="@style/Widget.DFG.PreferenceActivity.RowWidget"/>

  <!-- Glare  -->
  <TextView
      android:layout_gravity="start|end|center_vertical"
      android:text="@string/glare_preference"
      style="@style/Widget.DFG.PreferenceActivity.RowTitle"/>
  <Switch
      android:id="@+id/glare_preference"
      android:layout_gravity="start|center_vertical"
      style="@style/Widget.DFG.PreferenceActivity.RowWidget"/>

  <!-- Blur Background  -->
  <TextView
      android:layout_gravity="start|end|center_vertical"
      android:text="@string/blur_background_preference"
      style="@style/Widget.DFG.PreferenceActivity.RowTitle"/>
  <Switch
      android:id="@+id/blur_background_preference"
      android:layout_gravity="start|center_vertical"
      style="@style/Widget.DFG.PreferenceActivity.RowWidget"/>

  <!-- Color Background  -->
  <TextView
      android:layout_gravity="start|end|center_vertical"
      android:text="@string/color_background_preference"
      style="@style/Widget.DFG.PreferenceActivity.RowTitle"/>
  <Switch
      android:id="@+id/color_background_preference"
      android:layout_gravity="start|center_vertical"
      style="@style/Widget.DFG.PreferenceActivity.RowWidget"/>

  <!-- Background Color  -->
  <TextView
      android:layout_gravity="start|end|center_vertical"
      android:text="@string/background_color_preference"
      style="@style/Widget.DFG.PreferenceActivity.RowTitle"/>
  <Spinner
      android:id="@+id/background_color_preference"
      android:layout_gravity="start|end|center_vertical"/>


</GridLayout>